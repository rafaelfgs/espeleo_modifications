<launch>


    <arg name = "base_chassis"   default = "0 0 0.145 0 0 0"/>
    <arg name = "chassis_xsens"  default = "0 0 0.075 0 0 0"/>
    <arg name = "chassis_os1"    default = "0 0 0.2525 0 0 0"/>
    <arg name = "chassis_d435i"  default = "0.28 0 0.055 0 0 0"/>

    <arg name = "chassis_base"   default = "0 0 -0.145 0 0 0"/>
    <arg name = "xsens_chassis"  default = "0 0 -0.075 0 0 0"/>
    <arg name = "os1_chassis"    default = "0 0 -0.2525 0 0 0"/>
    <arg name = "d435i_chassis"  default = "-0.28 0 -0.055 0 0 0"/>


    <include file = "$(find espeleo_mythings)/espeleo_tfs/espeleo_sensors_ufmg.launch"/>


    <node pkg = "tf"
          type = "static_transform_publisher"
          name = "chassis_link_broadcaster"
          args = "$(arg base_chassis) base_link chassis_link 100"
          output = "screen">
    </node>

    <node pkg = "tf"
          type = "static_transform_publisher"
          name = "xsens_link_broadcaster"
          args = "$(arg chassis_xsens) chassis_link xsens_link 100"
          output = "screen">
    </node>

    <node pkg = "tf"
          type = "static_transform_publisher"
          name = "os1_link_broadcaster"
          args = "$(arg chassis_os1) chassis_link os1_link 100"
          output = "screen">
    </node>

    <node pkg = "tf"
          type = "static_transform_publisher"
          name = "d435i_link_broadcaster"
          args = "$(arg chassis_d435i) chassis_link d435i_link 100"
          output = "screen">
    </node>


</launch>
